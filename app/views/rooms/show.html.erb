<h2>Room Information</h2>
<div class="main">
  <div class="image">
    <img src="<%= url_for(@room.room_image) if @room.room_image.attached? %>"
    class="rounded mx-auto d-block" alt="image"
    style="width: 250px; height: 250px;" />
  </div>
  <div class="info">
    <p>Name: <%= @room.name %></p>
    <p>Floor: <%= @room.floor_number %></p>
    <p>Capacity: <%= @room.capacity %></p>
    <div class="book">
      <%= link_to "Book this room", new_room_booking_path(@room), class: "btn btn-info btn-lg" %>
    </div>
  </div>
  <% if current_user == nil %>
  <% elsif current_user.is_admin? %>
    <div class="buttons">
      <div class="edit">
        <%= link_to "Edit room", edit_room_path(@room), class: "btn btn-warning btn-lg"%>
      </div>
      <div class="delete">
        <%= link_to "Delete room", room_path(@room), class: "btn btn-danger btn-lg",
          data: {
            turbo_method: :delete,
            turbo_confirm: 'Are you sure you want to delete this room?'
          }%>
      </div>
    </div>
  <% end %>
</div>
<div>
  <h2>Room Schedule:</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">S.N.</th>
        <th scope="col">Meeting description</th>
        <th scope="col">Meeting start</th>
        <th scope="col">Meeting end</th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each_with_index do |booking, num| %>
        <tr>
          <th scope="row"><%= num+1 %></th>
          <td><%= booking.description %></td>
          <td><%= booking.start_date_time %></td>
          <td><%= booking.end_date_time %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= link_to 'Go back', rooms_path %>
